<div class="modal fade" id="edit-user-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                                <h3><i class="fa fa-lock fa-2x icon-color"></i></h3>
                                <h4 class="modal-title w-100 text-center">Edit&nbsp; Profile &nbsp;</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <form id="edit-account-form-data" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text icon-width"><i class="fa fa-user icon-color"></i>
                                </div>
                            </div>
                            <input name="firstName" id="edit-user-first-name" type="text" class="form-control" placeholder="First name"
                                required="required" style="border-top-right-radius: 0.25rem; border-bottom-right-radius: 0.25rem;">
                            <div class="input-group-prepend" style="margin-left: .5rem;">
                                <div class="input-group-text icon-width" style="border-top-left-radius: .3rem; border-bottom-left-radius: .3rem"><i
                                        class="fa fa-user icon-color"></i>
                                </div>
                            </div>
                            <input name="lastName" id="edit-user-last-name" type="text" class="form-control" placeholder="Last name"
                                required="required">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text icon-width"><i class="fa fa-user icon-color"></i>
                                </div>
                            </div>
                            <input name="username" id="edit-user-username" type="text" class="form-control" placeholder="Username"
                                required="required">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text icon-width"><i class="fa fa-id-card-o icon-color" style="margin-left: -4px;"></i>
                                </div>
                            </div>
                            <input name="id" id="edit-user-id" type="number" class="form-control" placeholder="ID" required="required">
                        </div>
                    </div>
                    <div class="md-form mb-4">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text icon-width"><i class="fa fa-phone icon-color"></i>
                                </div>
                            </div>
                            <input name="phone" id="edit-user-phone" type="tel" class="form-control" placeholder="Phone" required="required">
                        </div>
                    </div>
                    <div class="md-form mb-4">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text icon-width"><i class="fa fa-envelope icon-color"></i>
                                </div>
                            </div>
                            <input name="email" id="edit-user-email" type="email" class="form-control" placeholder="Email" required="required">
                        </div>
                    </div>
                    <div class="md-form mb-4">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text icon-width"><i class="fa fa-male icon-color" style="margin-left: 1px;"></i><i
                                        class="fa fa-female icon-color"></i>
                                </div>
                            </div>
                            <select name="gender" class="form-control" id="edit-user-gender">
                                <option hidden>Gender</option>
                                <option label="Male" value="Male" />
                                <option label="Female" value="Female" />
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" id="edit-user-button" class="btn btn-primary btn-block btn-lg" value="Submit">
                    </div>
                </form>
                <p id="edit-user-err-msg" class="text-center" style="color: red"></p>
            </div>
        </div>
    </div>
</div>
