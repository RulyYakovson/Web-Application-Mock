<div id="after-reset-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                                <h3><i class="fa fa-lock fa-2x icon-color"></i></h3>
                                <h4 class="text-center">Reset your password here:</h4>
                                <div class="panel-body">
                                    <form id="after-reset-submit">
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text icon-width"><i
                                                            class="fas fa-check icon-color"></i>
                                                    </div>
                                                </div>
                                                <input id="after-reset-token" type="text" class="form-control"
                                                    placeholder="Verification token (sent to your email)"
                                                    required="required">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text icon-width"><i class="fa fa-user icon-color"></i>
                                                    </div>
                                                </div>
                                                <input id="after-reset-username" type="text" class="form-control"
                                                    placeholder="Username" required="required">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text icon-width"><i class="fa fa-lock icon-color"></i>
                                                    </div>
                                                </div>
                                                <input id="after-reset-password" type="password" class="form-control"
                                                    placeholder="New password" required="required">
                                            </div>
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text icon-width"><i class="fa fa-hand-o-right icon-color"></i>
                                                    </div>
                                                </div>
                                                <input id="after-reset-confirm" type="password" class="form-control"
                                                    placeholder="Confirm new password" required="required">
                                            </div>
                                            <label id="after-reset-password-err-msg" class="inner-error-msg"
                                                hidden="true" style="margin-top: -.6rem;"></label>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" id="after-reset-button" value="Submit"
                                                class="btn btn-primary btn-block btn-lg">
                                        </div>
                                    </form>
                                </div>
                                <div class="container">
                                    <p id="after-reset-msg" style="margin-top: 5px;"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>