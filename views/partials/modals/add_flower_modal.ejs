<div class="modal fade" id="add-flower-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title w-100 text-center">Add new flower</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <div class="modal-body">
                <form id="add-flower-form-data" method="post" enctype="multipart/form-data">
                    <div class="md-form mb-4">
                        <input id="add-flower-name" name="name" type="text" class="form-control"
                            placeholder="Flower name" required="required" />
                    </div>
                    <div class="md-form mb-4">
                        <input id="add-flower-price" name="price" type="number" step="0.1" class="form-control"
                            placeholder="Price" required="required" />
                    </div>
                    <div class="md-form mb-4">
                        <textarea class="form-control" id="add-flower-description" maxlength="80" name="description"
                            placeholder="Description"></textarea>
                    </div>
                    <div class="md-form mb-4">
                        <input id="add-flower-url" name="url" type="text" class="form-control"
                            placeholder="URL to download image" />
                    </div>
                    <div class="form-group files">
                        <input type="file" id="add-flower-img" name="flower-img" class="form-control" />
                    </div>
                    <div class="form-group" style="text-align: center">
                        <input id="add-flower-button" type="submit" value="Add" class="btn btn-primary btn-lg"
                            style="width: 330px; margin-right: 30px;" />
                        <input id="clean-flower-button" type="reset" value="Clean" class="btn btn-secondary btn-lg" />
                    </div>
                </form>
                <p id="add-flower-err-msg" style="color: red"></p>
            </div>
        </div>
    </div>
</div>