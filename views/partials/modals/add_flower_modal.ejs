<div class="modal fade" id="add-flower-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">				
                <h4 class="modal-title">Add new flower</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <div class="modal-body">
                <form action="/add/flower" method="post" enctype="multipart/form-data">
                    <div class="md-form mb-4">
                        <input id="add-flower-name" name="name" type="text" class="form-control" placeholder="Flower name" required="required">
                    </div>
                    <div class="md-form mb-4">
                        <input id="add-flower-price" name="price" type="number" step="0.1" class="form-control" placeholder="Price" required="required">					
                    </div>
                    <div class="md-form mb-4">
                        <textarea class="form-control" id="add-flower-description" maxlength="100" name="description" placeholder="Description" ></textarea>
                        <!-- <input id="add-flower-description" name="description" type="text" class="form-control" placeholder="Description"> -->
                    </div>
                    <div class="md-form mb-4">
                        <input type="file" id="add-flower-img" name="flower-img" class="form-data" />
                    </div>
                    <div class="form-group">
                        <input id="add-flower-button" type="submit" value="Add" class="btn btn-primary btn-block btn-lg" />
                    </div>
                </form>
                <p id="add-flower-err-msg" style="color: red"></p>
            </div>
        </div>
    </div>
</div>
