<div id="change-pass-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                                <h3><i class="fa fa-lock fa-2x icon-color"></i></h3>
                                <h4 class="text-center">Change password</h4>
                                <div class="panel-body">
                                    <form id="change-pass-submit">
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text icon-width"><i
                                                            class="fas fa-unlock icon-color"></i>
                                                    </div>
                                                </div>
                                                <input id="change-pass-old" type="password" class="form-control"
                                                    placeholder="Old password" required="required">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group mb-2">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text icon-width"><i
                                                            class="fa fa-lock icon-color"
                                                            style="font-size: larger;"></i>
                                                    </div>
                                                </div>
                                                <input id="change-pass-new" type="password" class="form-control"
                                                    placeholder="Set new password" required="required">
                                            </div>
