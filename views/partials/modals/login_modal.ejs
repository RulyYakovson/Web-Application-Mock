<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title w-100 text-center">Log in</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <form id="login-form-data">
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text icon-width"><i class="fa fa-user icon-color"></i></div>
                                </div>
                                <input id="login-username" type="text" class="form-control" placeholder="Username"
                                    required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text icon-width"><i class="fa fa-lock icon-color"></i></div>
                                </div>
                                <input id="login-password" type="password" class="form-control" placeholder="Password"
                                    required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" id="login-button" value="Login"
                                class="btn btn-primary btn-block btn-lg">
                        </div>
                    </form>
                    <div class="container">
                        <a class="forgot-button" href="#" data-target="#reset-pass-modal" data-toggle="modal"
