<div class="modal fade" id="add-customer-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">				
                    <h4 class="modal-title">Add new customer</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                </div>
                <div class="modal-body">
                    <form id="add-customer-form-data">
                        <div class="form-group">
                            <input id="add-customer-username" type="text" class="form-control" placeholder="Username" required="required">
                        </div>
                        <div class="md-form mb-4">
                            <input id="add-customer-password" type="password" class="form-control" placeholder="Password" required="required">					
                        </div>
                        <div class="form-group">
                            <input id="add-customer-id" type="number" class="form-control" placeholder="ID" required="required">
                        </div>
                        <div class="md-form mb-4">
                            <input id="add-customer-phone" type="tel" class="form-control" placeholder="Phone" required="required">					
                        </div>
                        <div class="md-form mb-4">
                            <input id="add-customer-address" type="email" class="form-control" placeholder="Email" required="required">					
                        </div>
                        <div class="md-form mb-4">
                            <select class="form-control" id="add-customer-gender">
                                <option hidden>Gender</option>
                                <option label="Male" value = "Male" />
                                <option label="Female" value = "Female" />
                            </select>					
                        </div>
                        <div class="form-group">
                            <input type="submit" id="add-customer-button" class="btn btn-primary btn-block btn-lg" value="Add">
                        </div>
                    </form>
                    <p id="add-customer-err-msg" style="color: red"></p>
                </div>
            </div>
        </div>
    </div>
    