<div class="card" style="width: fit-content; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2)">
    <% include modals/update_emp_modal %>
    <div class="card-body">
        <h5 class="card-title"><%= employees[i].username %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= employees[i].role %></h6>
        <% if (userRole && userRole === 'admin') { %>
            <h6 class="card-subtitle mb-2 text-muted"><%= 'Password: ' + employees[i].password %></h6>
        <% } %>
        <p class="card-subtitle"><%= 'Branch: ' + employees[i].branch %></p>
        <p class="card-text"><%= 'ID: ' + employees[i].id %></p>
        <% if (userRole && userRole === 'admin') { %>
            <a id="remove-employee" href="#" class="card-link" style="color: red"
            onclick="removeEmployee(<%= employees[i].id %>)">Remove</a>
            <a href="#" class="card-link" data-toggle="modal" data-target=<%='#' + employees[i].id %> >Update</a>
        <% } %>
    </div>
</div>